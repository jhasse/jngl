{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "gdb",
			"request": "launch",
			"name": "jngl-test (GDB)",
			"target": "./build/jngl-test",
			"cwd": "${workspaceRoot}",
			"valuesFormatting": "prettyPrinters",
			"preLaunchTask": "build"
		},
		{
			"type": "gdb",
			"request": "launch",
			"name": "videoplayer (GDB)",
			"target": "./build/videoplayer",
			"arguments": "data/verysmall.ogv",
			"cwd": "${workspaceRoot}",
			"valuesFormatting": "prettyPrinters",
			"preLaunchTask": "build"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "jngl-test (LLDB)",
			"program": "${workspaceRoot}/build/jngl-test",
			"args": [],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "build"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "videoplayer",
			"program": "${workspaceRoot}/build/videoplayer",
			"args": ["data/verysmall.ogv"],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "build"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "jngl-unittest (LLDB)",
			"program": "${workspaceRoot}/build/jngl-unittest",
			"args": [],
			"cwd": "${workspaceRoot}/build",
			"preLaunchTask": "build"
		},
		{
			"name": "jngl-test (C/C++)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/build/jngl-test",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
				"MIMode": "gdb",
				"miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
			},
			"preLaunchTask": "build"
		},
		{
			"name": "jngl-unittest (C/C++)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/build/jngl-unittest",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}/build",
			"environment": [],
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
				"MIMode": "gdb",
				"miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
			},
			"preLaunchTask": "build"
		}
	]
}
